---
import { Calendar, ArrowRight, Clock } from 'lucide-astro';

const recentPosts = [
  {
    title: "Multi-Agent Systems",
    excerpt: "Exploring how multiple AI agents can work together to solve complex problems using LangChain's multi-agent framework.",
    date: "2024-02-12",
    slug: "multi-agent-systems",
    readTime: "8 min read",
    category: "Agents & Tools"
  },
  {
    title: "Custom Tools Development",
    excerpt: "Learn how to create custom tools for your LangChain agents, extending their capabilities with external APIs and services.",
    date: "2024-02-08",
    slug: "custom-tools-development",
    readTime: "6 min read",
    category: "Agents & Tools"
  },
  {
    title: "Introduction to Agents",
    excerpt: "Understanding the concept of AI agents in LangChain and how they can autonomously make decisions and take actions.",
    date: "2024-02-05",
    slug: "introduction-to-agents",
    readTime: "5 min read",
    category: "Agents & Tools"
  }
];
---

<section class="py-16 bg-white dark:bg-gray-900">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">
        Latest Learning Posts
      </h2>
      <p class="text-lg text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
        Recent discoveries and insights from my LangChain learning journey
      </p>
    </div>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {recentPosts.map((post, index) => (
        <article class="group bg-white dark:bg-gray-800 rounded-2xl shadow-sm hover:shadow-xl border border-gray-200 dark:border-gray-700 transition-all duration-300 hover:-translate-y-1 animate-fade-in" style={`animation-delay: ${index * 0.1}s`}>
          <div class="p-6">
            <!-- Category Badge -->
            <div class="inline-flex items-center px-3 py-1 rounded-full bg-primary-100 dark:bg-primary-900/30 text-primary-700 dark:text-primary-300 text-sm font-medium mb-4">
              {post.category}
            </div>
            
            <!-- Title -->
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-3 group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors duration-200">
              <a href={`/posts/${post.slug}`} class="hover:underline">
                {post.title}
              </a>
            </h3>
            
            <!-- Excerpt -->
            <p class="text-gray-600 dark:text-gray-300 mb-4 line-clamp-3">
              {post.excerpt}
            </p>
            
            <!-- Meta Info -->
            <div class="flex items-center justify-between text-sm text-gray-500 dark:text-gray-400 mb-4">
              <div class="flex items-center">
                <Calendar class="w-4 h-4 mr-1" />
                {new Date(post.date).toLocaleDateString('en-US', { 
                  month: 'short', 
                  day: 'numeric',
                  year: 'numeric'
                })}
              </div>
              <div class="flex items-center">
                <Clock class="w-4 h-4 mr-1" />
                {post.readTime}
              </div>
            </div>
            
            <!-- Read More Link -->
            <a 
              href={`/posts/${post.slug}`}
              class="inline-flex items-center text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 font-medium group/link transition-colors duration-200"
            >
              Read More
              <ArrowRight class="w-4 h-4 ml-1 group-hover/link:translate-x-1 transition-transform duration-200" />
            </a>
          </div>
        </article>
      ))}
    </div>
    
    <!-- View All Posts Button -->
    <div class="text-center mt-12">
      <a 
        href="/topics"
        class="inline-flex items-center px-6 py-3 bg-primary-600 hover:bg-primary-700 text-white font-medium rounded-xl transition-all duration-200 hover:scale-105 hover:shadow-lg group"
      >
        View All Posts
        <ArrowRight class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform duration-200" />
      </a>
    </div>
  </div>
</section>
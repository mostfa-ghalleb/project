---
import { Sun, Moon, BookOpen } from 'lucide-astro';
---

<header class="sticky top-0 z-50 bg-white/80 dark:bg-gray-900/80 backdrop-blur-md border-b border-gray-200 dark:border-gray-700">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center space-x-2 group">
        <BookOpen class="w-8 h-8 text-primary-600 dark:text-primary-400 group-hover:rotate-12 transition-transform duration-300" />
        <span class="text-xl font-bold bg-gradient-to-r from-primary-600 to-purple-600 bg-clip-text text-transparent">
          LangChain Journey
        </span>
      </a>
      
      <!-- Navigation -->
      <nav class="hidden md:flex items-center space-x-8">
        <a href="/" class="text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors duration-200">
          Home
        </a>
        <a href="/topics" class="text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors duration-200">
          Topics
        </a>
        <a href="/about" class="text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors duration-200">
          About
        </a>
      </nav>
      
      <!-- Theme Toggle -->
      <button 
        onclick="toggleTheme()"
        class="p-2 rounded-lg bg-gray-100 dark:bg-gray-800 hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors duration-200"
        aria-label="Toggle theme"
      >
        <Sun class="w-5 h-5 dark:hidden" />
        <Moon class="w-5 h-5 hidden dark:block" />
      </button>
    </div>
  </div>
</header>